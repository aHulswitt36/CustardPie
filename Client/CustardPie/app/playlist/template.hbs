      <li><a class="filter" href="#Y">Y</a></li>
      <li><a class="filter" href="#Z">Z</a></li>
    </ul>

    {{#each groupedByBandName as |group|}}
      <div id={{group.group}} class="songlist">
        {{#each group.content as |band|}}
          <div class="band">
            <h2>{{band.bandName}}</h2>
            {{song-list songs=band.songs}}
          </div>
        {{/each}}
      </div>
    {{/each}}
  </div>
</div>
